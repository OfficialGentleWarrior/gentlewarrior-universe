/* CORE TILE GLOW */
.tile.ignara-core {
  z-index: 2;
  box-shadow:
    0 0 0 2px rgba(255, 120, 60, 1),
    0 0 14px rgba(255, 120, 60, 0.85),
    0 0 26px rgba(255, 80, 30, 0.7);
  animation: ignaraGlow 1.9s ease-in-out infinite;
}

/* INNER RING (SECONDARY IDENTIFIER) */
.tile.ignara-core::after {
  content: "";
  position: absolute;
  inset: -5px;
  border-radius: 14px;

  border: 2px solid rgba(255, 140, 80, 0.95);
  pointer-events: none;

  box-shadow:
    inset 0 0 10px rgba(255, 120, 60, 0.6),
    0 0 10px rgba(255, 120, 60, 0.6);
}

/* GLOW BREATH */
@keyframes ignaraGlow {
  0% {
    box-shadow:
      0 0 0 2px rgba(255, 120, 60, 1),
      0 0 12px rgba(255, 120, 60, 0.7),
      0 0 22px rgba(255, 80, 30, 0.5);
  }
  50% {
    box-shadow:
      0 0 0 2px rgba(255, 160, 100, 1),
      0 0 18px rgba(255, 150, 90, 1),
      0 0 32px rgba(255, 110, 60, 0.9);
  }
  100% {
    box-shadow:
      0 0 0 2px rgba(255, 120, 60, 1),
      0 0 12px rgba(255, 120, 60, 0.7),
      0 0 22px rgba(255, 80, 30, 0.5);
  }
}
