/* ---------- IGNARA CORE (IDLE) ---------- */
.tile.ignara-core {
  z-index: 2;
}

.tile.ignara-core::after {
  content: "";
  position: absolute;
  inset: -5px;
  border-radius: 14px;

  border: 2px solid rgba(255, 120, 60, 0.95);
  box-shadow:
    0 0 8px rgba(255, 120, 60, 0.65),
    0 0 16px rgba(255, 90, 40, 0.45);

  opacity: 1;
  pointer-events: none;

  animation: ignaraIdle 2.2s ease-in-out infinite;
  will-change: transform, opacity;
}

@keyframes ignaraIdle {
  0% {
    transform: scale(0.95);
    opacity: 0.9;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
  100% {
    transform: scale(0.95);
    opacity: 0.9;
  }
}

/* ---------- IGNARA EXPLOSION ---------- */
.tile.ignara-explode::after {
  animation: ignaraExplode 0.35s ease-out forwards;
}

@keyframes ignaraExplode {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  60% {
    transform: scale(1.7);
    opacity: 0.9;
  }
  100% {
    transform: scale(2.2);
    opacity: 0;
  }
}
